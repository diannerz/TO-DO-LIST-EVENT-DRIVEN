<Window x:Class="TO_DO_LIST_EVENT_DRIVEN.Pages.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category Window" Height="450" Width="400">

    <Grid>
        <StackPanel Margin="30">

            <TextBlock Name="categoryTitle" Text="Tasks" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="taskListBox" Height="300"/>
            <Button Content="Close" Width="100" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
