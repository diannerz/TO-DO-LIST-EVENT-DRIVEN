<Page x:Class="TO_DO_LIST_EVENT_DRIVEN.Pages.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SummaryPage">

    <Grid Background="#FFFFFF">
        <StackPanel Margin="20">

            <TextBlock Text="Task Summary" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Tasks Completed: " FontSize="18"/>
            <TextBlock Name="taskCompletionCount" Text="0" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Task Breakdown by Category -->
            <TextBlock Text="Task Breakdown by Category" FontSize="18" Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="View Work Tasks" Width="150" Margin="5" Click="ViewWorkTasks_Click"/>
                <Button Content="View Personal Tasks" Width="150" Margin="5" Click="ViewPersonalTasks_Click"/>
                <Button Content="View Errands Tasks" Width="150" Margin="5" Click="ViewErrandsTasks_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
