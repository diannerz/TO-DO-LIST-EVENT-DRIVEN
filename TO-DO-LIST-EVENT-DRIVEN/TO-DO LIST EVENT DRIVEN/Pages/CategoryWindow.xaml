<Window x:Class="TO_DO_LIST_EVENT_DRIVEN.Pages.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category Window" Height="640" Width="1000">

    <Grid Background="#FFF8F4E1">
        <StackPanel Margin="30">

            <TextBlock Name="categoryTitle" Text="Tasks" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#FF543310"/>
            <ListBox x:Name="taskListBox" Height="300"/>
            <Button Content="Close" Width="100" Click="Close_Click" Foreground="#FF543310">
                <Button.BorderBrush>
                    <ImageBrush/>
                </Button.BorderBrush>
            </Button>
        </StackPanel>
    </Grid>
</Window>
